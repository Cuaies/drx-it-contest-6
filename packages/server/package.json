{
  "name": "@drx-it-contest-6/server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "prestart:dev": "npm run docker:dev",
    "start:dev": "dotenvx run -- nest start --watch",
    "start:debug": "dotenvx run -- nest start --debug --watch",
    "prestart:prod": "npm run build && npm run docker:prod",
    "start:prod": "dotenvx run -f .env.production -- node dist/src/main",
    "predb:seed": "npx tsc -p .",
    "db:seed": "npx sequelize-cli db:seed:all",
    "docker:dev": "dotenvx run -- docker compose up --build --detach",
    "docker:test": "dotenvx run -f .env.testing -- docker compose up --build --detach",
    "docker:prod": "dotenvx run -f .env.production -- docker compose up --build --detach",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --verbose --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "npm run docker:test",
    "test:e2e": "dotenvx run -f .env.testing -- jest --config ./test/jest-e2e.json",
    "pretest:e2e:watch": "npm run docker:test",
    "test:e2e:watch": "dotenvx run -f .env.testing -- jest --config ./test/jest-e2e.json --watch",
    "posttest:e2e:watch": "dotenvx run -f .env.testing -- npm run docker:clean"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.38.5",
    "@drx-it-contest-6/core": "^1.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/sequelize": "^11.0.0",
    "@sequelize/postgres": "^7.0.0-alpha.45",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.6",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.17.24",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "pactum": "^3.7.6",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
